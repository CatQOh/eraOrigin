@ABLUP9
SIF ABL:マゾっ気 == 10 && !TALENT:リミットバースト
	RETURN 0
CALL NEED_JUEL_マゾっ気
CALL CHECK_JUEL_マゾっ気
IF RESULT
	CALL NEED_JUEL_マゾっ気
	REPEAT 15
		JUEL:COUNT -= ABLUP:COUNT
	REND
	ABL:マゾっ気++
ENDIF

@NEED_JUEL_マゾっ気
SELECTCASE ABL:マゾっ気
	CASE 0
		ABLUP:GETPALAM("欲情") = 100
		ABLUP:GETPALAM("苦痛") = 100
	CASE 1
		ABLUP:GETPALAM("欲情") = 500
		ABLUP:GETPALAM("苦痛") = 500
	CASE 2
		ABLUP:GETPALAM("欲情") = 1000
		ABLUP:GETPALAM("苦痛") = 1200
	CASE 3
		ABLUP:GETPALAM("欲情") = 6000
		ABLUP:GETPALAM("苦痛") = 3000
		ABLUPEXP:GETEXP("苦痛快楽経験") = 10
	CASE 4
		ABLUP:GETPALAM("欲情") = 12000
		ABLUP:GETPALAM("苦痛") = 5000
		ABLUPEXP:GETEXP("苦痛快楽経験") = 50
	CASE 5
		ABLUP:GETPALAM("欲情") = 15000
		ABLUP:GETPALAM("苦痛") = 8000
		ABLUPEXP:GETEXP("苦痛快楽経験") = 100
	CASE 6
		ABLUP:GETPALAM("欲情") = 20000
		ABLUP:GETPALAM("苦痛") = 12000
		ABLUPEXP:GETEXP("苦痛快楽経験") = 150
	CASE 7
		ABLUP:GETPALAM("欲情") = 25000
		ABLUP:GETPALAM("苦痛") = 15000
		ABLUPEXP:GETEXP("苦痛快楽経験") = 200
	CASE 8
		ABLUP:GETPALAM("欲情") = 35000
		ABLUP:GETPALAM("苦痛") = 25000
		ABLUPEXP:GETEXP("苦痛快楽経験") = 250
	CASE 9
		ABLUP:GETPALAM("欲情") = 40000
		ABLUP:GETPALAM("苦痛") = 30000
		ABLUPEXP:GETEXP("苦痛快楽経験") = 350
	CASE IS >= 10
		LOCAL = ABL:マゾっ気*ABL:マゾっ気
		ABLUP:GETPALAM("欲情") = 500 * LOCAL
		ABLUP:GETPALAM("苦痛") = 400 * LOCAL
		ABLUPEXP:GETEXP("苦痛快楽経験") = 4 * LOCAL
ENDSELECT

;一線越えない及び未陥落
IF TALENT:一線越えない && !CFLAG:陥落
	TIMES ABLUP:GETPALAM("欲情") , 1.50
	TIMES ABLUP:GETPALAM("苦痛") , 1.50
	TIMES ABLUPEXP:GETEXP("苦痛快楽経験") , 1.50
ENDIF
;マゾ
IF TALENT:マゾ
	TIMES ABLUP:GETPALAM("欲情") , 0.50
	TIMES ABLUP:GETPALAM("苦痛") , 0.50
	TIMES ABLUPEXP:GETEXP("苦痛快楽経験") , 0.50
ENDIF
;痛みに強い
IF TALENT:痛みに強い
	TIMES ABLUP:GETPALAM("欲情") , 0.70
	TIMES ABLUP:GETPALAM("苦痛") , 0.70
	TIMES ABLUPEXP:GETEXP("苦痛快楽経験") , 0.70
ENDIF

;LV3からは異常経験必要 LV4からは異常経験3以上必要 LV8からは異常経験5以上必要（素質：[解放]なら無視できる）
IF TALENT:解放 == 0
	IF ABL:マゾっ気 >= 8
		ABLUPEXP:GETEXP("異常経験") = 5
	ELSEIF ABL:マゾっ気 >= 4
		ABLUPEXP:GETEXP("異常経験") = 3
	ELSEIF ABL:マゾっ気 >= 3
		ABLUPEXP:GETEXP("異常経験") = 1
	ENDIF
ENDIF

@CHECK_JUEL_マゾっ気
;異常経験が規定値に満たないと上昇できない
SIF EXP:異常経験 < ABLUPEXP:GETEXP("異常経験")
	RETURN 0

;苦痛、欲情の珠、苦痛快楽経験が必要
SIF JUEL:苦痛 >= ABLUP:GETPALAM("苦痛") && JUEL:欲情 >= ABLUP:GETPALAM("欲情") && EXP:苦痛快楽経験 >= ABLUPEXP:GETEXP("苦痛快楽経験")
	RETURN 1

;上記の条件を満たせないと上げられない
RETURN 0

@ABLUP_MESSAGE_マゾっ気
SELECTCASE ABL:マゾっ気
	CASE 3, 4, 8
		;LV3からは異常経験必要 LV4からは異常経験3以上必要 LV8からは異常経験5以上必要（素質：[解放]なら無視できる）
		SIF EXP:異常経験 < ABLUPEXP:GETEXP("異常経験")
			SETCOLOR 120, 120, 120
		SIF ABLUPEXP:GETEXP("異常経験")
			PRINTFORM [異常経験{ABLUPEXP:GETEXP("異常経験")}以上]
		RESETCOLOR
ENDSELECT

SIF JUEL:欲情 < ABLUP:GETPALAM("欲情")
	SETCOLOR 120, 120, 120
PRINTFORM [欲情の珠×{ABLUP:GETPALAM("欲情")}]
RESETCOLOR

SIF JUEL:苦痛 < ABLUP:GETPALAM("苦痛")
	SETCOLOR 120, 120, 120
PRINTFORM [苦痛の珠×{ABLUP:GETPALAM("苦痛")}]
RESETCOLOR

SIF EXP:苦痛快楽経験 < ABLUPEXP:GETEXP("苦痛快楽経験")
	SETCOLOR 120, 120, 120
SIF ABLUPEXP:GETEXP("苦痛快楽経験")
	PRINTFORM [苦痛快楽経験{ABLUPEXP:GETEXP("苦痛快楽経験")}以上]
RESETCOLOR

