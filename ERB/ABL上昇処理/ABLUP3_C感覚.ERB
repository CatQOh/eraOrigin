@ABLUP3
SIF ABL:bo == 10 && !TALENT:~bgo[Xg
	RETURN 0
CALL NEED_JUEL_bo
CALL CHECK_JUEL_bo
IF RESULT
	CALL NEED_JUEL_bo
	REPEAT 15
		JUEL:COUNT -= ABLUP:COUNT
	REND
	ABL:bo++
ENDIF

@NEED_JUEL_bo
SELECTCASE ABL:bo
	CASE 0
		ABLUP:GETPALAM("b") = 1
	CASE 1
		ABLUP:GETPALAM("b") = 20
	CASE 2
		ABLUP:GETPALAM("b") = 400
	CASE 3
		ABLUP:GETPALAM("b") = 5000
	CASE 4
		ABLUP:GETPALAM("b") = 15000
	CASE 5
		ABLUP:GETPALAM("b") = 30000
	CASE 6
		ABLUP:GETPALAM("b") = 40000
	CASE 7
		ABLUP:GETPALAM("b") = 50000
	CASE 8
		ABLUP:GETPALAM("b") = 60000
	CASE 9
		ABLUP:GETPALAM("b") = 70000
	CASE IS >= 10
		LOCAL = ABL:bo*ABL:bo
		ABLUP:GETPALAM("b") = 800 * LOCAL
ENDSELECT

;
SIF TALENT:
	TIMES ABLUP:GETPALAM("b") , 0.80
;w
SIF TALENT:w
	TIMES ABLUP:GETPALAM("b") , 0.50
;j
SIF TALENT:j
	TIMES ABLUP:GETPALAM("b") , 0.80

@CHECK_JUEL_bo
;b̎ŏグ
SIF JUEL:b >= ABLUP:GETPALAM("b")
	RETURN 1

;L̏𖞂ȂグȂ
RETURN 0

@ABLUP_MESSAGE_bo
