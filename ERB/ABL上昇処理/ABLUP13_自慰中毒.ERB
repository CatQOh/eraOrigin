	SETCOLOR 120, 120, 120
PRINTFORM [快Ｃの珠×{ABLUP:GETPALAM("快Ｃ")}]
RESETCOLOR

SIF JUEL:欲情 < ABLUP:GETPALAM("欲情")
	SETCOLOR 120, 120, 120
PRINTFORM [欲情の珠×{ABLUP:GETPALAM("欲情")}]
RESETCOLOR

SIF JUEL:恐怖 < ABLUP:GETPALAM("恐怖")
	SETCOLOR 120, 120, 120
PRINTFORM [恐怖の珠×{ABLUP:GETPALAM("恐怖")}]
RESETCOLOR

SIF EXP:自慰経験 < ABLUPEXP:GETEXP("自慰経験")
	SETCOLOR 120, 120, 120
PRINTFORM [自慰経験{ABLUPEXP:GETEXP("自慰経験")}以上]
RESETCOLOR

