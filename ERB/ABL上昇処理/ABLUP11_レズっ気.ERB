	SETCOLOR 120, 120, 120
PRINTFORM [欲情の珠×{ABLUP:GETPALAM("欲情")}]
RESETCOLOR

SIF EXP:レズ経験 < ABLUPEXP:GETEXP("レズ経験")
	SETCOLOR 120, 120, 120
PRINTFORM [レズ経験{ABLUPEXP:GETEXP("レズ経験")}以上]
RESETCOLOR

