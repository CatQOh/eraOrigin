@ABLUP2
SIF ABL:ZI == 10 && !TALENT:~bgo[Xg
	RETURN 0
CALL NEED_JUEL_ZI
CALL CHECK_JUEL_ZI
IF RESULT
	CALL NEED_JUEL_ZI
	REPEAT 15
		JUEL:COUNT -= ABLUP:COUNT
	REND
	ABL:ZI++
ENDIF

@NEED_JUEL_ZI
SELECTCASE ABL:ZI
	CASE 0
		ABLUP:GETPALAM("K") = 1
	CASE 1
		ABLUP:GETPALAM("K") = 20
	CASE 2
		ABLUP:GETPALAM("K") = 200
	CASE 3
		ABLUP:GETPALAM("K") = 3000
	CASE 4
		ABLUP:GETPALAM("K") = 20000
	CASE 5
		ABLUP:GETPALAM("K") = 25000
	CASE 6
		ABLUP:GETPALAM("K") = 34000
	CASE 7
		ABLUP:GETPALAM("K") = 45000
	CASE 8
		ABLUP:GETPALAM("K") = 55000
	CASE 9
		ABLUP:GETPALAM("K") = 70000
	CASE IS >= 10
		LOCAL = ABL:ZI*ABL:ZI
		ABLUP:GETPALAM("K") = 800 * LOCAL
ENDSELECT

;nח
SIF FALLTYPE(TARGET) == 2
	TIMES ABLUP:GETPALAM("K") , 0.80

@CHECK_JUEL_ZI
;K̎ŏグ
SIF JUEL:K >= ABLUP:GETPALAM("K")
	RETURN 1

;L̏𖞂ȂグȂ
RETURN 0

@ABLUP_MESSAGE_ZI
