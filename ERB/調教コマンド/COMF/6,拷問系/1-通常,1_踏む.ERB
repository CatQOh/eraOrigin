@USERCOM_ABLE_踏む, ARG
#FUNCTION
;妊娠中は調教者がサドもしくは禁断の知識持ちじゃないとできない
IF TALENT:MASTER:サド || TALENT:MASTER:禁断の知識
	COMRESULT = 1
	RETURNF 1
ENDIF
SIF TALENT:妊娠
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_踏む
LOCAL = 0
IF ABL:PLAYER:技巧 == 0
	PRINTL 踏む
	CALL KOJO_MESSAGE_COM
ELSEIF ABL:PLAYER:技巧 >= 1
	PRINTL どこを踏みますか？
	PRINTL [0] 腹
	PRINTL [1] 胸
	SIF ABL:PLAYER:技巧 >= 2
		PRINTL [2] 股間
	SIF ABL:PLAYER:技巧 >= 3
		PRINTL [3] 首
	SIF ABL:PLAYER:技巧 >= 4
		PRINTL [4] 顔
	DO
		INPUT
		SIF RESULT > ABL:PLAYER:技巧
			CONTINUE
	LOOP LOOPRES(0, 1, 2, 3, 4)

	LOCAL = RESULT
	TFLAG:踏む部位 = RESULT

	SELECTCASE LOCAL
		CASE 0
			PRINTL 腹を踏む
		CASE 1
			PRINTL 胸を踏む
		CASE 2
			PRINTL 股間を踏む
		CASE 3
			PRINTL 首を踏む
		CASE 4
			PRINTL 顔を踏む
	ENDSELECT
	CALL KOJO_MESSAGE_COM
ENDIF

