;-------------------------------------------------
;電気按摩
;-------------------------------------------------
@USERCOM_ABLE_電気按摩, ARG
#FUNCTION
;ASSIの場合、技巧3以上かサドじゃないと使えない。
IF ASSIPLAY
	SIF ABL:ASSI:技巧 < 3 && !TALENT:ASSI:サド
		RETURNF 0
ENDIF
;ペニスバンド装着中はダメ
SIF TEQUIP:ペニスバンド
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_電気按摩
PRINTL 電気按摩
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;射精ゲージチェック（奴隷）
;-------------------------------------------------
LOCAL = 射精ゲージ計算_Ｐ道具(250)

;奴隷のABL:Ｃ感覚をみる
LOCAL += (LOCAL/2)*ABL:Ｃ感覚

CALL 射精ゲージ増加, LOCAL, TARGET

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 30
LOSEBASE:気力 += 100

SOURCE:快C = 500
SOURCE:露出 = 40
SOURCE:逸脱 = 60
SOURCE:反感 = 100

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 60

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 1, 1

RETURN 1

