;-------------------------------------------------
;コンドーム精飲（奴隷）
;-------------------------------------------------
@USERCOM_ABLE_コンドーム精飲（奴隷）, ARG
#FUNCTION
;コンドーム精飲（奴隷）
;それまでの調教でゴム射してないとダメ
SIF !TFLAG:使用済み避妊具
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_コンドーム精飲（奴隷）
PRINTL コンドーム精飲（奴隷）
;-------------------------------------------------
;実行判定処理
;-------------------------------------------------
;すべての命令に共通の要素を考慮
;(従順が高いと命令に従いやすいなど)
CALL COM_ORDER

VARSET LOCAL, 0
LOCAL = RESULT

;ABL:欲望
IF ABL:欲望
	LOCAL += ABL:欲望
	PRINTFORM +欲望LV{ABL:欲望}({ABL:欲望})
ENDIF
;ABL:奉仕精神
IF ABL:奉仕精神
	LOCAL += ABL:奉仕精神*4
	PRINTFORM +奉仕精神LV{ABL:奉仕精神}({ABL:奉仕精神*4})
ENDIF
;ABL:精液中毒
IF ABL:精液中毒
	LOCAL += ABL:精液中毒*3
	PRINTFORM +精液中毒LV{ABL:精液中毒}({ABL:精液中毒*3})
ENDIF
;快楽刻印
IF MARK:快楽刻印
	LOCAL += MARK:快楽刻印
	PRINTFORM +快楽刻印LV{MARK:快楽刻印}({MARK:快楽刻印})
ENDIF

CALL COM_ORDER_欲情, 1
LOCAL += RESULT

;PALAM:欲情
LOCAL:1 = GETPALAMLV(PALAM:欲情, 5)
LOCAL:2 = LOCAL:1
SIF TALENT:衝動的
	LOCAL:2 *= 2
IF LOCAL:2
	LOCAL += LOCAL:2
	PRINTFORM +欲情LV{LOCAL:1}({LOCAL:2})
ENDIF

;汚臭鈍感
IF TALENT:汚臭鈍感
	LOCAL += 2
	PRINTFORM +汚臭鈍感(2)
ENDIF
;汚臭敏感
IF TALENT:汚臭敏感
	LOCAL -= 7
	PRINTFORM -汚臭敏感(7)
ENDIF
;献身的
IF TALENT:献身的
	LOCAL += 6
	PRINTFORM +献身的(6)
ENDIF
;男嫌い
IF TALENT:男嫌い
	LOCAL -= 12
	PRINTFORM -男嫌い(12)
ENDIF
;男好き
IF TALENT:男好き
	LOCAL += 3
	PRINTFORM +男好き(3)
ENDIF
;淫乱
IF TALENT:淫乱
	LOCAL += 5
	PRINTFORM +淫乱(5)
ENDIF
;娼婦
IF TALENT:娼婦
	LOCAL += 10
	PRINTFORM +娼婦(10)
ENDIF
;男（両刀・男好きなら無効）
IF SEX(TARGET) == 1 && !TALENT:両刀 && !TALENT:男好き
	LOCAL -= 5
	PRINTFORM -男(5)
ENDIF

;合計を表示(24以上で実行)
PRINTFORM  = {LOCAL}

LOCAL:1 = 24
SIF LOCAL < LOCAL:1
	PRINT  < 
SIF LOCAL == LOCAL:1
	PRINT  = 
SIF LOCAL > LOCAL:1
	PRINT  > 
PRINTFORM 実行値{LOCAL:1}
WAIT
;実行できない
IF LOCAL < LOCAL:1
	CALL KOJO_MESSAGE_EVENT, "コマンド拒否時"
	RETURN 0
ENDIF

;-------------------------------------------------
;実行決定
;-------------------------------------------------
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 10
LOSEBASE:気力 += 70

SOURCE:性行動 = 100
SOURCE:達成 = 150
SOURCE:屈従 = 500
SOURCE:逸脱 = 500
SOURCE:反感 = 500
SOURCE:不潔 = 500

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 100

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;コンドームの精液を初期化
TFLAG:使用済み避妊具 = 0

RETURN 1

