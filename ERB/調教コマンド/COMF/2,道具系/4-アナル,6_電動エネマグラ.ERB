;-------------------------------------------------
;電動エネマグラ
;-------------------------------------------------
@USERCOM_ABLE_電動エネマグラ, ARG
#FUNCTION
;男性のみ
SIF SEX(TARGET) == 2
	RETURNF 0
;触手調教中はダメ
SIF TEQUIP:触手
	RETURNF 0
;服着てるとダメ
SIF !性器露出(TARGET)
	RETURNF 0
;解除はいつでも可能
IF TEQUIP:電動エネマグラ
	COMRESULT = 1
	RETURNF 1
ENDIF
;調教対象が小人体型の場合は主人が禁断の知識持ちじゃないとダメ
SIF TALENT:小人体型 && !TALENT:MASTER:禁断の知識
	RETURNF 0
;アナル使用中はダメ
SIF Ａ使用中(TARGET)
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_電動エネマグラ
PRINTL 電動エネマグラ
CALL KOJO_MESSAGE_COM

;着脱の処理
INVERTBIT TEQUIP:電動エネマグラ, 0

;-------------------------------------------------
;射精ゲージチェック（奴隷）
;-------------------------------------------------
CALL 射精ゲージ増加, 射精ゲージ計算_Ａ挿入(10), TARGET

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 20
LOSEBASE:気力 += 40

SOURCE:快A = 30
SOURCE:苦痛 = 50
SOURCE:露出 = 200
SOURCE:不潔 = 30
SOURCE:屈従 = 100
SOURCE:逸脱 = 50
SOURCE:反感 = 150

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 70

CALL 特殊ソース処理_Ａ

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 5

CALL SAMEN_SHOOT_T, 5, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 1, 2

RETURN 1

;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM_電動エネマグラ
PRINTL ＜電動エネマグラ挿入中＞

LOSEBASE:体力 += 10
LOSEBASE:気力 += 20

SOURCE:快A += 300
SOURCE:苦痛 += 50
SOURCE:露出 += 50
SOURCE:不潔 += 10
SOURCE:逸脱 += 50
SOURCE:反感 += 50

;-------------------------------------------------
;射精ゲージチェック（奴隷）
;-------------------------------------------------
CALL 射精ゲージ増加, 射精ゲージ計算_Ａ挿入(5), TARGET

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 35

CALL 特殊ソース処理_Ａ道具, 100, 40

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, "Ａ経験", 1

RETURN 1

