@USERCOM_ABLE_ローション, ARG
#FUNCTION
;全裸じゃないとダメ
SIF OVER_GENITAL(TARGET) != "" || OVER_BUST(TARGET) != ""
	RETURNF 0
;シャワー中はダメ
SIF TEQUIP:シャワー
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_ローション
PRINTL ローション
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 3
LOSEBASE:気力 += 3

DOWNBASE:MASTER:体力 += 10
DOWNBASE:MASTER:気力 += 10

SOURCE:液体 = 10000
SOURCE:露出 = 100

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 1, 1

RETURN 1

