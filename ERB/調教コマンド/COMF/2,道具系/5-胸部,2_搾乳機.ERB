;-------------------------------------------------
;搾乳器
;-------------------------------------------------
@USERCOM_ABLE_搾乳機, ARG
#FUNCTION
;触手調教中はダメ
SIF TEQUIP:触手
	RETURNF 0
;胸が露出してないとダメ
SIF OVER_BUST(TARGET) != ""
	RETURNF 0
;解除はいつでも可能
IF TEQUIP:搾乳器
	COMRESULT = 1
	RETURNF 1
ENDIF
;小人体型持ちは主人が禁断の知識持ちじゃないとダメ
SIF TALENT:小人体型 && !TALENT:MASTER:禁断の知識
	RETURNF 0
;母乳体質でないと使えない
SIF !TALENT:母乳体質
	RETURNF 0
;胸に道具ついてるとダメ
SIF Ｂ使用中(TARGET)
	RETURNF 0
;Ｂ感覚2以下はダメ
SIF ABL:TARGET:Ｂ感覚 <= 2
	RETURNF 0
;男だとダメ
SIF SEX(TARGET) == 1
	RETURNF 0
;ASSIの場合、技巧3以上じゃないと使えない。
IF ASSIPLAY
	SIF ABL:ASSI:技巧 < 3
		RETURNF 0
ENDIF
;シャワー中はダメ
SIF TEQUIP:シャワー
	RETURNF 0
;新妻プレイ中はダメ
SIF TEQUIP:エプロン
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_搾乳機
IF TEQUIP:触手
	PRINTL 触手搾乳
	SELECTCOM = 165
ELSE
	PRINTL 搾乳器
ENDIF
CALL KOJO_MESSAGE_COM

;着脱の処理
INVERTBIT TEQUIP:搾乳器, 0

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 50
LOSEBASE:気力 += 100

SOURCE:快B = 200
SOURCE:苦痛 = 100
SOURCE:中毒 = 100
SOURCE:露出 = 30
SOURCE:不潔 = 50
SOURCE:屈従 = 100
SOURCE:逸脱 = 100
SOURCE:反感 = 100

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 100

;中毒による中毒充足のソースは先に処理しておく
;噴乳中毒を見る
SELECTCASE ABL:噴乳中毒
	CASE 1
		TIMES SOURCE:中毒 , 0.00
	CASE 2
		TIMES SOURCE:中毒 , 0.30
	CASE 3
		TIMES SOURCE:中毒 , 0.60
	CASE 4
		TIMES SOURCE:中毒 , 0.90
	CASE 5
		TIMES SOURCE:中毒 , 1.20
	CASE 6
		TIMES SOURCE:中毒 , 1.50
	CASE 7
		TIMES SOURCE:中毒 , 1.80
	CASE 8
		TIMES SOURCE:中毒 , 2.30
	CASE 9
		TIMES SOURCE:中毒 , 3.00
	CASE IS >= 10
		TIMES SOURCE:中毒 , 5.00
ENDSELECT

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;触手搾乳なら、触手体液が胸に付く
SIF TEQUIP:触手
	SETBIT STAIN:胸, 5

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, 1, 1

RETURN 1

;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM_搾乳機
;搾乳器装備中
IF TEQUIP:触手
	PRINTL ＜触手搾乳中＞
ELSE
	PRINTL ＜搾乳器装備中＞
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:体力 += 25
LOSEBASE:気力 += 50

SOURCE:快B += 100
SOURCE:苦痛 += 50
SOURCE:中毒 += 50
SOURCE:露出 += 20
SOURCE:屈従 += 50
SOURCE:逸脱 += 50
SOURCE:反感 += 50

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;触手経験加算
SIF TEQUIP:触手
	TENTACLE++

RETURN 1

