;-------------------------------------------------
;触手強制放尿
;-------------------------------------------------
@USERCOM_ABLE_触手強制放尿, ARG
#FUNCTION
;触手ないとダメ
SIF !TEQUIP:触手
	RETURNF 0
;対象にペニスあるとダメ
SIF PENIS(TARGET)
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_触手強制搾精
PRINTL 触手強制搾精
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:体力 += 150
LOSEBASE:気力 += 300

SOURCE:屈従 = 1500
SOURCE:苦痛 = 2000
SOURCE:恐怖 = 1500
SOURCE:逸脱 = 3000
SOURCE:反感 = 1000
SOURCE:不潔 = 500
SOURCE:露出 = 1000

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;放尿コマンドでは射精チェックを行わない
;-------------------------------------------------
;CALL SAMEN_CHECK_T, 0

;CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
SETBIT STAIN:ヴァギナ, 7

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;放尿経験
PRINTFORML 放尿経験+5
EXP:放尿経験 += 5
TEQUIP:利尿剤 = 0

SIF TEQUIP:ビデオカメラ
	CFLAG:放尿を撮影された経験++
SIF TEQUIP:野外プレイ
	CFLAG:野外放尿経験++
SIF TEQUIP:お風呂場
	CFLAG:風呂場放尿経験++

;獣人、獣による催淫
SELECTCASE CSTR:種族
	CASE "獣人", "獣"
		CFLAG:PLAYER:媚薬++
		SIF CFLAG:PLAYER:媚薬%5 == 0
			CFLAG:PLAYER:残数++
ENDSELECT

TENTACLE++

RETURN 1

