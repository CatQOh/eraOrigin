;-------------------------------------------------
;踏んでもらう
;-------------------------------------------------
@USERCOM_ABLE_踏んでもらう, ARG
#FUNCTION
;サド、もしくはサドっ気3以上必要
SIF ABL:サドっ気 < 3 && !TALENT:サド
	RETURNF 0
;拘束中はダメ
SIF TEQUIP:縄
	RETURNF 0
;触手調教中はダメ
SIF TEQUIP:触手
	RETURNF 0
;助手の場合はマゾかマゾっ気3以上必要
IF PLAYER == ASSI
	SIF ABL:ASSI:マゾっ気 < 3 && !TALENT:マゾ
		RETURNF 0
ENDIF

COMRESULT = 1
RETURNF 1

@COM_踏んでもらう
PRINTL 踏んでもらう
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 40
LOSEBASE:気力 += 40

DOWNBASE:MASTER:体力 += 80
DOWNBASE:MASTER:気力 += 60

SOURCE:性行動 = 250
SOURCE:達成 = 100
SOURCE:中毒 = 250
SOURCE:逸脱 = 200
SOURCE:反感 = 100
SOURCE:不潔 = 150

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, 1, 1

PRINTL 嗜虐快楽経験+3
EXP:嗜虐快楽経験 += 3
PRINTL 調教経験+3
EXP:調教経験 += 3

RETURN 1

