@SHOW_EQUIP
;使用中の道具を表示する
;一度使用したら解除するまで止まらない道具や調教を
;追加した場合はここに追加をしてください

LOCAL = 0

IF TEQUIP:MASTER:コンドーム
	PRINT [主人避妊具]
	LOCAL++
ENDIF
IF ASSI >= 0 && TEQUIP:ASSI:コンドーム
	PRINT [助手避妊具]
	LOCAL++
ENDIF
IF CFLAG:酔
	IF TALENT:下戸 && CFLAG:酔 >= 20
		PRINTFORM [%CALLNAME:TARGET%泥酔中]
	ELSEIF !TALENT:酒豪 && CFLAG:酔 >= 50
		PRINTFORM [%CALLNAME:TARGET%泥酔中]
	ELSE
		PRINTFORM [%CALLNAME:TARGET%酒気帯び]
	ENDIF
	LOCAL++
ENDIF
FOR COUNT, 11, 40
	SIF TEQUIP:COUNT == 0
		CONTINUE
	SELECTCASE TEQUIPNAME:COUNT
		;触手最優先
		CASE "触手"
			PRINT [触手召喚中]
		;薬系は一番最初
		CASE "媚薬"
			PRINT [媚薬効果発揮中]
			LOCAL++
		CASE "利尿剤"
			PRINT [利尿剤効果発揮中]
			LOCAL++
		CASE "強精神薬"
			IF TEQUIP:強精神薬 == 1
				PRINT [強精神薬反動中]
			ELSE
				PRINT [絶頂抑制中]
			ENDIF
			LOCAL++
		CASE "クリキャップ"
			IF TEQUIP:触手
				PRINT [触手クリ責め]
			ELSE
				PRINT [クリキャップ]
			ENDIF
			LOCAL++
		CASE "オナホール"
			IF TEQUIP:触手
				PRINT [触手オナホ]
			ELSE
				PRINT [オナホール]
			ENDIF
			LOCAL++
		CASE "バイブ"
			IF TEQUIP:触手
				PRINT [触手挿入]
			ELSE
				PRINT [バイブ]
			ENDIF
			LOCAL++
		CASE "アナルバイブ"
			IF TEQUIP:触手
				PRINT [触手アナル挿入]
			ELSE
				PRINT [アナルバイブ]
			ENDIF
			LOCAL++
		CASE "ニプルキャップ"
			IF TEQUIP:触手
				PRINT [触手乳首責め]
			ELSE
				PRINT [ニプルキャップ]
			ENDIF
			LOCAL++
		CASE "搾乳器"
			IF TEQUIP:触手
				PRINT [触手搾乳]
			ELSE
				PRINT [搾乳器]
			ENDIF
			LOCAL++
		CASE "アナルビーズ", "アイマスク", "縄", "ボールギャグ", "浣腸器", "拡張バルーン", "アナル電極", "乳房電極", "シャワー", "触手口辱"
			PRINTFORM [%TEQUIPNAME:COUNT%]
			LOCAL++
		CASE "搾精コンドーム"
			IF TEQUIP:触手
				PRINTL [触手搾精中]
			ELSE
				PRINTL [搾精コンドーム]
			ENDIF
			LOCAL++
		CASE "Ｖ異物"
			PRINT [膣異物
			SELECTCASE TEQUIP:Ｖ異物
				CASE 1
					PRINT (缶)]
				CASE 2
					PRINT (ボトル)]
				CASE 3
					PRINT (瓶)]
				CASE 4
					PRINT (消火器)]
			ENDSELECT
			LOCAL++
		CASE "Ａ異物"
			PRINT [アナル異物
			SELECTCASE TEQUIP:Ａ異物
				CASE 1
					PRINT (缶)]
				CASE 2
					PRINT (ボトル)]
				CASE 3
					PRINT (瓶)]
				CASE 4
					PRINT (消火器)]
			ENDSELECT
			LOCAL++
	ENDSELECT
NEXT
