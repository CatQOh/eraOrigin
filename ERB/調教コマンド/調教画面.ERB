@STAIN_INFO
;汚れ表示
CALL SHOW_STAIN, MASTER
CALL SHOW_STAIN, TARGET
SIF ASSI > 0
	CALL SHOW_STAIN, ASSI
WAIT

@SHOW_STAIN, ARG
PRINTFORML 【%CALLNAME:ARG%の汚れ】
REPEAT 9
	SELECTCASE COUNT
		CASE 2
			SIF SEX(ARG) == 2 && !TALENT:ARG:ふたなり
				CONTINUE
		CASE 3, 6
			SIF SEX(ARG) == 1 && !TALENT:ARG:ふたなり
				CONTINUE
		CASE 7
			SIF CSTR:ARG:下半身下着 == ""
				CONTINUE
	ENDSELECT

	SELECTCASE COUNT
		CASE 0
			PRINT 　口唇：
		CASE 1
			PRINT 　手指：
		CASE 2
			PRINT 　陰茎：
		CASE 3
			PRINT 　膣口：
		CASE 4
			PRINT 　肛門：
		CASE 5
			PRINT 　乳房：
		CASE 6
			PRINT 　膣内：
		CASE 7
			PRINT 　下着：
	ENDSELECT
	SIF GETBIT(STAIN:ARG:COUNT, 0)
		PRINT <愛液>
	SIF GETBIT(STAIN:ARG:COUNT, 1)
		PRINT <先走り>
	SIF GETBIT(STAIN:ARG:COUNT, 2)
		PRINT <精液>
	SIF GETBIT(STAIN:ARG:COUNT, 3)
		PRINT <アナル>
	SIF GETBIT(STAIN:ARG:COUNT, 4)
		PRINT <母乳>
	SIF GETBIT(STAIN:ARG:COUNT, 5)
		PRINT <粘液>
	SIF GETBIT(STAIN:ARG:COUNT, 6)
		PRINT <破瓜の血>
	SIF GETBIT(STAIN:ARG:COUNT, 7)
		PRINT <尿>
	PRINTL 
REND

