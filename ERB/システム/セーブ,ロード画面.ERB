SELECTCASE RESULT
	CASE 0 TO 19, 94 TO 99
		SELECTCASE CHKDATA(RESULT)
			CASE 0
				LOADDATA RESULT
			CASEELSE
				RESTART
		ENDSELECT
	CASE 100
		RETURN 0
	CASEELSE
		RESTART
ENDSELECT

RETURN 0

