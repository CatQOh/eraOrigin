LOCALS = %LOCALS% | {YEAR}/%TOSTR(MONTH, "D2")%/%TOSTR(DAYS, "D2")%(%DOW(FLAG:曜日)%)

SELECTCASE TIME
	CASE 0
		LOCALS += @" {DAY}日目昼 "
	CASE 1
		LOCALS += @" {DAY}日目夜 "
ENDSELECT


IF TARGET >= 0
	LOCALS += @"%NAME:TARGET%調教中 "
	SIF TALENT:恋慕
		LOCALS += "恋,"
	SIF TALENT:淫乱
		LOCALS += "淫,"
