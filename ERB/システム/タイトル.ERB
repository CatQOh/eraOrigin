@SYSTEM_TITLE
#DIM DYNAMIC LMONTH
#DIM DYNAMIC LDAYS
LOADGLOBAL

;10秒
TOOLTIP_SETDURATION 10000

LOCAL:1 = LINECOUNT

DO
	LMONTH = TOINT(SUBSTRING(GETTIMES(), 5, 2))
	LDAYS = TOINT(SUBSTRING(GETTIMES(), 8, 2))
	LOCAL = 0
	DRAWLINE
	REPEAT 10000
		SIF !EXISTCSV(COUNT)
			CONTINUE
		IF (CSVCFLAG(COUNT, GETNUM(CFLAG, "誕生日"))/100) == LMONTH && (CSVCFLAG(COUNT, 0)%100) == LDAYS
			PRINTFORML 今日は%CSVNAMEF(COUNT)%の誕生日です
			LOCAL++
		ENDIF
	REND
	IF LOCAL
		PRINTL ハッピーバースデー！
		DRAWLINE
	ENDIF
	LOCAL = 0
	ALIGNMENT CENTER
	PRINTFORML %GAMEBASE_TITLE% Ver.{GAMEBASE_VERSION/1000}.{GAMEBASE_VERSION%100}
	DRAWLINE

	PRINTL [0] 最初からはじめる
	PRINTL [1] ロードしてはじめる
	PRINTL [2] CSVエディターを開く
	PRINTL [3] オプションの初期設定を変更する

	ALIGNMENT LEFT

	DO
		INPUT
		SELECTCASE RESULT
			CASE 0
				RESETDATA
				BEGIN FIRST
			CASE 1
				RESETDATA
				;LOADGAME
				CALL USERLOAD
				BREAK
			CASE 2
				CALL CSV_EDITOR
				BREAK
			CASE 3
				CALL DEFAULT_OPTION
				BREAK
		ENDSELECT
	LOOP 1
LOOP 1

