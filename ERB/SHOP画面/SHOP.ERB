	;主人は除外
	SIF COUNT == MASTER
		CONTINUE
	;奴隷も除外
	SIF COUNT == TARGET
		CONTINUE
	;使用不可は除外
	SIF CFLAG:COUNT:使用不可
		CONTINUE
