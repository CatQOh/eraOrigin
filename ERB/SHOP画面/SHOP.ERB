SIF TALENT:MASTER:ふたなり
	PRINT [ふたなり]
PRINTL 

IF ASSI >= 0
	IF TALENT:ASSI:アニマル
		PRINTFORM 　ペット:%NAME:ASSI%
	ELSE
		PRINTFORM 　助手:%NAME:ASSI%
	ENDIF
	PRINTFORM %性別表示(ASSI)% 
	SIF TALENT:ASSI:ふたなり
		PRINT [ふたなり]
