		TRYCCALLFORM DISABLE_ITEM_%アイテム名%_K{NO:PAGING}
			SIF RESULT == 0
				使用可 = 0
		CATCH
		ENDCATCH
	ENDIF
	CALL PAGING, 使用可, @"%追加情報%", "ITEM USE", "戻る"
