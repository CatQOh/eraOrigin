	;永続的利尿剤
	CASE "永続的利尿剤"
		PRINTFORMW ＜%CALLNAME:使用対象%は尿意を我慢できなくなった＞
		TALENT:使用対象:おもらし癖 = 1
		CFLAG:使用対象:ストレス値 += 10
	;ビースティースターター
	CASE "ビースティースターター"
		PRINTFORM ＜%CALLNAME:使用対象%に
		SIF !TALENT:使用対象:動物耳
			PRINT 動物の耳
		SIF !TALENT:使用対象:動物耳 && !TALENT:使用対象:尻尾
			PRINT と
		SIF !TALENT:使用対象:尻尾
			PRINT 動物の尻尾
		PRINTW が生えた＞
		TALENT:使用対象:動物耳 = 1
		TALENT:使用対象:尻尾 = 1
		IF TALENT:使用対象:好奇心
			CFLAG:使用対象:依存度 += 50
		ELSE
			CFLAG:使用対象:ストレス値 += 3
		ENDIF
	;魔剤
	CASE "魔剤"
		PRINTFORMW ＜%CALLNAME:使用対象%のテンションが上がってきた！＞
		CFLAG:使用対象:魔剤 = 1
		TIMES CFLAG:使用対象:魔剤耐性, 1.1
		CFLAG:使用対象:魔剤耐性 = LIMIT(CFLAG:使用対象:魔剤耐性, 1100, 2000)
		CFLAG:使用対象:回復量低下 += 5
		CFLAG:使用対象:ストレス値 += 10
	;排卵誘発剤
	CASE "排卵誘発剤"
		IF 使用対象 == MASTER
			PRINTFORMW ＜%CALLNAME:MASTER%は排卵誘発剤を使用した＞
		ELSE
			PRINTFORMW ＜%CALLNAME:使用対象%に排卵誘発剤を使った＞
		ENDIF
		CFLAG:使用対象:排卵誘発剤 = 1
		CFLAG:使用対象:ストレス値 += 3
	;リミットバースト
	CASE "リミッター解除"
		PRINTFORMW ＜%NAME:使用対象%のリミッターを解除した＞
		TALENT:使用対象:リミットバースト = 1
ENDSELECT

RETURN 0
